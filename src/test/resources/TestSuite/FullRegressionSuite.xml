<!--            </run>-->
<!--        </groups>-->
        <classes>
            <class name="com.practicetestautomation.tests.login.ParameterTest">
                <methods>
                    <include name="negativeLoginTest"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Incorrect Password Test">
        <parameter name="username" value="student"></parameter>
        <parameter name="password" value="Password"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.ParameterTest">
                <methods>
                    <include name="negativeLoginTest"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Before and After Annotation Test">
        <classes>
            <class name="com.practicetestautomation.tests.login.BeforeAfterAnnotation"></class>
        </classes>
    </test>
    <test name="Before and After Annotation Test with Parameters on Chrome">
        <parameter name="Browser" value="Chrome"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.BeforeAfterWithParameter">
                <methods>
                    <include name="TestLoginFunctionality"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Before and After Annotation Test with Parameters on Firefox">
        <parameter name="Browser" value="Firefox"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.BeforeAfterWithParameter">
                <methods>
                    <include name="TestIncorrectPasswordText"></include>
                </methods>
            </class>
        </classes>
    </test>
