<!--This is testtag for implementing parameter annotation-->
    <test name="Incorrect Username Test">
        <parameter name="username" value="User"></parameter>
        <parameter name="password" value="Password123"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
<!--        <groups>-->
